# PayPal (Sandbox first)
PAYPAL_CLIENT_ID=your_sandbox_client_id
PAYPAL_CLIENT_SECRET=your_sandbox_client_secret
PAYPAL_ENV=sandbox

# What you SHOW on site
DISPLAY_CURRENCY=ALL

# What PayPal CHARGES (PayPal doesn't support ALL for payments)
PAYPAL_CHARGE_CURRENCY=EUR

# Conversion you control (example: 1 EUR = 100 ALL)
ALL_PER_EUR=100

# Feature flags
PAYPAL_ENABLED=true
CARD_ENABLED=false

# Base URL (local)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
